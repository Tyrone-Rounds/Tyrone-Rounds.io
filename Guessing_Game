  <script type = "text/javascript">
	
  
   var digit2 = Math.ceil(Math.random() *24);
   function patOnBack(){
	
	var yourGuess = document.getElementById("num1").value;
		if(yourGuess === ''){
		document.getElementById('answer').innerHTML = 'You must enter a value!';
		} else if(yourGuess < digit2){
			document.getElementById('answer').innerHTML = yourGuess + ' is too low';
		
			}
		else if(yourGuess > digit2){
			document.getElementById('answer').innerHTML = yourGuess +   ' is too high';
			
	 }
		else{ document.getElementById('answer').innerHTML = '';
			
			document.getElementById('answer').innerHTML = yourGuess + ' is correct!' + 
			'<h1> YOU WIN!!</h1>';
		
		}

	
	}
	
	

   </script>

